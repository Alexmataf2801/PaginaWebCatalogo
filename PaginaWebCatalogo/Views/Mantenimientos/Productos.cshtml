
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Productos</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Codigo</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtCodProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNomProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Descripción</label>
                    <textarea type="text" class="form-control" style="border-radius:4px; white-space:pre-line" rows="8" cols="5" autocomplete="off" id="txtDescripProd"></textarea>
             
                </div>
                <div class="form-group row">
                    <label>Moneda</label>
                    <select class="form-control" id="ddlTipMoneda">
                        <option value="¢">Colones</option>
                        <option value="$">Dolares</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label>Precio Unitario</label>
                    <input type="number" step="any" class="form-control" style="border-radius:4px" autocomplete="off" id="txtPrecioUnitProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Condición</label><br />
                    <label >
                        <input type="radio" name="rbCondicion" value="1" checked>Nuevo &nbsp;
                    </label>
                    <label>
                        <input type="radio" name="rbCondicion" value="2">Semi-Nuevo &nbsp;
                    </label>
                    <label>
                        <input type="radio" name="rbCondicion" value="3">Sin Definir &nbsp;
                    </label>
                </div>
                <div class="form-group row">
                    <label>Tiene Descuento</label><br />
                    <input type="checkbox" class="form-check-input" id="chkDescuento">
                    <label class="form-check-label" for="chkDescuento">Descuento</label>
                </div>
                <div id="SeccionDescuento" style="display:none">
                    <div class="form-group row">
                        <label>Tipo Descuento</label>
                        <select class="form-control" id="ddlTipoDescuento">
                            <option value="1">Cantidad</option>
                            <option value="2">Porcentaje</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label>Valor de descuento</label>
                        <input type="number" step="any" class="form-control" min="0" style="border-radius:4px" autocomplete="off" id="txtDescuento" maxlength="10" />
                    </div>
                </div>
                <div class="form-group row">
                    <label>Tipo Producto</label>
                    <select class="form-control" id="ddlTipoProdMant"></select>
                </div>
                <div class="form-group row">
                    <label>SubTipo Producto</label>
                    <select class="form-control" id="ddlSubTipoProdMant"></select>
                </div>
                <div class="form-group row">
                    <label>Imagenes</label>
                    <input id="Imagenes" type="file" multiple>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnGuardarDatosTipo" onclick="GuardarProducto();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoAgrProd">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoAgrProd" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarProd()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/Producto.js"></script>

@{
    ViewBag.Title = "Datos Empresa";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
<style>
    .container .panel .panel-body .nombre {
        padding-top: 30px
    }
</style>


<div id="qw" class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Datos de la Empresa</h3>
                    <hr />
                </div>
                <div class="form-group">
                    <label style="padding-top:5px">Nombre Empresa</label>
                    <input type="text" class="form-control" style="border-radius:4px;" autocomplete="off" id="txtNombreEmpresa" maxlength="150" />
                </div>
                <div class="form-group">
                    <label style="padding-top:5px">Descripcion Empresa</label>
                    <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px;" autocomplete="off" id="txtDescripcion" maxlength="150"></textarea>
                </div>
                <div class="form-group">
                    <label style="padding-top:5px">Correo Empresa</label>
                    <input type="text" class="form-control" style="border-radius:4px;" autocomplete="off" id="txtCorreo" maxlength="150" />
                </div>
                <div class="form-group">
                    <label style="padding-top:5px">Telefono Empresa</label>
                    <input type="text" class="form-control" style="border-radius:4px;" autocomplete="off" id="txtTelefono" maxlength="150" />
                </div>
                <div class="form-group">
                    <label style="padding-top:5px">Direccion Empresa</label>
                    <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px" autocomplete="off" id="txtDireccion" maxlength="150"></textarea>
                </div>
                <div class="form-group">
                    <label>Logo Empresa</label>
                    <input id="Logo" type="file" multiple>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnGuardarDatosEmpresa" onclick="GuardarEmpresa();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoAgrEmp">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoAgrEmp" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/Empresa.js"></script>
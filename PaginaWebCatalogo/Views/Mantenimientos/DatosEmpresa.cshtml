
@{
    ViewBag.Title = "Datos Empresa";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Datos de la Empresa</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Nombre Empresa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombreEmpresa" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Descripcion Empresa</label>
                    <div class="col-sm-10">
                        @*<input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtDescripcion" maxlength="150" />*@
                        <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px" autocomplete="off" id="txtDescripcion" maxlength="150"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Correo Empresa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtCorreo" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Telefono Empresa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtTelefono" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Direccion Empresa</label>
                    <div class="col-sm-10">
                        @*<input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtDireccion" maxlength="150" />*@
                        <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px" autocomplete="off" id="txtDireccion" maxlength="150"></textarea>
                    </div>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <button style="margin:0 auto" id="btnGuardarDatosEmpresa" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>

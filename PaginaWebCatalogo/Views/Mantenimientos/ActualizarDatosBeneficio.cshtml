
@{
    ViewBag.Title = "ActualizarDatosBeneficio";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
<input type="hidden" id="IdProdEdit" />
<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Beneficios</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtCodBene" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Descripción</label>
                    <textarea type="text" class="form-control" style="border-radius:4px; white-space:pre-line" rows="8" cols="5" autocomplete="off" id="txtDescripBene"></textarea>

                </div>
                <div class="form-group">
                    <label>Icono Beneficio</label>
                    <select class="fa form-control" id="Iconos"></select>
                </div>
            </div>
        </div>
    </div>
</div>

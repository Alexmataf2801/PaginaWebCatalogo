@{
    ViewBag.Title = "ActualizarDatosProducto";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
<input type="hidden" id="IdProdEdit" />
<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Productos</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Codigo</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActCodProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActNomProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Descripción</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActDescripProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Moneda</label>
                    <select class="form-control" id="ddlTipMoneda">
                        <option value="¢">Colones</option>
                        <option value="$">Dolares</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label>Precio Unitario</label>
                    <input type="number" step="any" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActPrecioUnitProd" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Tipo Producto</label>
                    <select class="form-control" id="ddlActTipoProdMant"></select>
                </div>
                <div class="form-group row">
                    <label>SubTipo Producto</label>
                    <select class="form-control" id="ddlActSubTipoProdMant"></select>
                </div>
                <div class="form-group row">
                    <label>Imagenes Actuales</label>
                    <div id="ImagenesProductos">
                    </div>
                </div>
                <div class="form-group row">
                    <label>Imagenes</label>
                    <input id="ImagenesAct" type="file" multiple>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnActualizarDatosProd" onclick="ActualizarProducto();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL INFORMACION-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalInformacionProd">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#0074D9;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjInfoProd" style="text-align:center"></p>
                <input type="hidden" id="IdImgSeleccionada" />
            </div>
            <div class="modal-footer">
                <a id="ConfirmacionBorrar" onclick="EliminarImagenActualizar()" type="button" class="btn btn-primary" data-dismiss="modal">Si</a>
                <a type="button" class="btn btn-primary" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL INFORMACION-->
<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoActProdRedirect">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoActProdRedirect" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarProd()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->
<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoActProd">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoActProd" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/ActualizarDatosProducto.js"></script>
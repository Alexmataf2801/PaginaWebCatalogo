
@{
    ViewBag.Title = "ActualizarDatosProducto";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Productos</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Codigo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActCodProd" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActNomProd" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Descripción</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActDescripProd" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Moneda</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="ddlTipMoneda">
                            <option value="¢">Colones</option>
                            <option value="$">Dolares</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Precio Unitario</label>
                    <div class="col-sm-10">
                        <input type="number" step="any" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActPrecioUnitProd" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Tipo Producto</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="ddlActTipoProdMant"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">SubTipo Producto</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="ddlActSubTipoProdMant"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Imagenes</label>
                    <div class="col-sm-10">
                        <input id="Imagenes" type="file" multiple>
                    </div>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnActualizarDatosProd" onclick="ActualizarProducto();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


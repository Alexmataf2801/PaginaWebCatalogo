@{
    ViewBag.Title = "ActualizarDatosTipo";

    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Actualizacion de datos de tipos</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Codigo</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActCodigoTipo" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActNombreTipo" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Descripcion</label>
                    <textarea type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtActDescripcionTIpo" maxlength="150"></textarea>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a class="btn btn-success" style="margin:0 auto" onclick="ActualizarDatosTipo()">Guardar</a>
                            @*<input type="button" style="margin:0 auto" onclick="ActualizarDatosTipo(@Model.IdTipo)" class="btn btn-success" value="Guardar" />*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoActTipo">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoActTipo" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarTipos()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

@Scripts.Render("~/bundles/jqueryPlantilla")
@Scripts.Render("~/bundles/ActTipo")    


@model Entidades.Empresa
@{
    ViewBag.Title = "ActualizarDatosEmpresa";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
@*<input type="hidden" id="IdEmpresa" value="@Model.IdRegistro" />*@
<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Actualización de Datos de la Empresa</h3>
                    <hr />
                </div>
                <div class="form-group">
                    <label>Nombre Empresa</label>
                    <input type="text" class="form-control" value="@Model.Nombre" style="border-radius:4px" autocomplete="off" id="txtActNombreEmpresa" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Descripcion Empresa</label>
                    <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px" autocomplete="off" id="txtActDescripcion" maxlength="150">@Model.Descripcion</textarea>
                </div>
                <div class="form-group">
                    <label>Correo Empresa</label>
                    <input type="text" class="form-control" value="@Model.CorreoElectronico" style="border-radius:4px" autocomplete="off" id="txtActCorreo" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Telefono Empresa</label>
                    <input type="text" class="form-control" value="@Model.Telefono" style="border-radius:4px" autocomplete="off" id="txtActTelefono" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Direccion Empresa</label>
                    <textarea cols="5" rows="10" type="text" class="form-control" value="" style="border-radius:4px" autocomplete="off" id="txtActDireccion" maxlength="150">@Model.Direccion</textarea>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <button style="margin:0 auto" onclick="ActualizarDatosEmpresa(@Model.IdRegistro)" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/ActualizarDatosEmpresa.js"></script>
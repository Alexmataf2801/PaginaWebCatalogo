@model Entidades.RedesSociales
@{
    ViewBag.Title = "RedesSociales";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Redes Sociales</h3>
                    <hr />
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombreRed" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Descripcion</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtDescripcionRed" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Url</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtUrlRed" maxlength="150" />
                </div>
                <div class="form-group">
                    <label>Icono Red Social</label>
                    <select class="fa form-control" id="Iconos"></select>
                </div>
                <div class="form-group">
                    <label>Selector de Color</label>
                    <input type="color" class="form-control" style="border-radius:4px" autocomplete="off" id="txtColor" />
                </div>

                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnGuardarRed" onclick="GuardarRedSocial();" class="btn btn-success">Guardar</a>
                            <a style="margin:0 auto; display:none" id="btnActualizarRed" onclick="ActualizarRedSocial();" class="btn btn-success">Actualizar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoRed">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoRed" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarRedes()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->


<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/RedSocial.js"></script>



@{
    ViewBag.Title = "Beneficios";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de Beneficios</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNomBene" maxlength="150" />
                </div>
                <div class="form-group row">
                    <label>Descripción</label>
                    <textarea type="text" class="form-control" maxlength="85" style="border-radius:4px; white-space:pre-line" rows="8" cols="5" autocomplete="off" id="txtDescripBene"></textarea>

                </div>
                <div class="form-group">
                    <label>Icono Beneficio</label>
                    <select class="fa form-control" id="ddlIconos"></select>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnGuardarBene" onclick="GuardarBeneficio();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoBen">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoBen" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarBeneficios()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->
<script src="~/Js/Administracion/jquery.min.js"></script>
<script src="~/Scripts/Mantenimientos/Beneficio.js"></script>



@{
    ViewBag.Title = "SubTipo";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" class="box-header">Mantenimiento de SubTipos</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Codigo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtCodigoSubTipo" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombreSubTipo" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Descripcion</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtDescripcionSubTipo" maxlength="150" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Tipo</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="ddlTipoProd"></select>
                    </div>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a style="margin:0 auto" id="btnGuardarDatosSubTipo"  onclick="GuardarSubTipoProducto();" class="btn btn-success">Guardar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

